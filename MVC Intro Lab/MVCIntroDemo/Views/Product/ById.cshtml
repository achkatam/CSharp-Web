@model MVCIntroDemo.ViewModels.Product.ProductViewModel

@{
    ViewBag.Title = "Product N. " + @Model.ProductId.Id;
}

<div class="card">
    <div class="card-header">@ViewBag.Title</div>
    <div class="card-body">
        <h5 class="card-title">Product name: @Model.Name</h5>
        <p class="card-text">Price: $@Model.Price</p> 
    </div>
</div>