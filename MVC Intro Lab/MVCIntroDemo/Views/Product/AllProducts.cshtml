@using MVCIntroDemo.ViewModels.Product;
@model IEnumerable<ProductViewModel>;
@{
    ViewData["Title"] = "All Products";
} 

<div class="container-fluid">
    <div class="row">
        <form asp-controller="Product" asp-action="My-Products" method="get">
            <div class="input-group">
                <input type="search" name="keyword" class="form-control rounded-1"/>
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewData["Title"]</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                <a asp-controller="Product" asp-action="ById" asp-route-id="@product.ProductId.Id">
                    @product.Name - $@product.Price
                </a>
            </li>
        }
    </ul>
</div>

<div class="row">
    <a class="btn btn-primary" asp-controller="Product" asp-action="AllAsTextFile">Download file info</a>
</div>